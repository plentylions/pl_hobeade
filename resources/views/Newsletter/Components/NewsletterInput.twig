<script type="x/template" id="vue-newsletter-input">
        <form :id="'newsletter-input-form_' + _uid" method="post" @submit.prevent="validateData">
            <div class="row">
                <div class="col-xs-12" v-if="title">
                    <p class="h4">${ title }</p>
                    <p v-if="subTitle">${ subTitle }</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3" v-if="showNameInputs">
                    <div class="input-unit">
                        <label :for="'first-name-input_' + _uid">{{ $translate("Ceres::Template.newsletterFirstName") }}</label>
                        <input type="text" :id="'first-name-input_' + _uid" v-model="firstName">
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-3 pl-sm-0" v-if="showNameInputs">
                    <div class="input-unit">
                        <label :for="'last-name-input_' + _uid">{{ $translate("Ceres::Template.newsletterLastName") }}</label>
                        <input type="text" :id="'last-name-input_' + _uid" v-model="lastName">
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-md-3 pl-md-0">
                    <div class="input-group">
                        <div class="input-unit" data-validate="mail">
                            <label :for="'email-input-id_' + _uid">{{ $translate("Ceres::Template.newsletterEmail") }} *</label>
                            <input type="email" autocomplete="email" :id="'email-input-id_' + _uid" v-model="email">
                        </div>
                        <input autocomplete="none" class="honey" type="text" name="username" tabindex="-1" v-model="honeypot">
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-md-3 pl-sm-0">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-block btn-primary btn-appearance" @click="validateData" :disabled="isDisabled" :class="buttonSizeClass">
                            <icon icon="paper-plane-o" :loading="isDisabled"></icon>
                            {{ $translate("Ceres::Template.newsletterSubscribeButtonLabel") }}
                        </button>
                    </div>
                </div>

                <div class="col-12" v-if="showPrivacyPolicyCheckbox">
                    <div class="form-check small" data-validate>
                        <input type="checkbox" class="form-check-input" :id="'privacy-policy-accept-id_' + _uid" name="privacy-policy-accept" v-model="privacyPolicyValue">
                        <label :for="'privacy-policy-accept-id_' + _uid" class="form-check-label" v-html="privacyPolicyText">
                        </label>
                    </div>
                </div>

            </div>
        </form>
</script>